<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Playlist</title>
    <link rel="stylesheet" href="css/district.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

  </head>
  <body style="background-color: gray;">
    
    <div class="jumbotron jumbotron-fluid" style="background-image: url(https://images8.alphacoders.com/810/thumb-1920-810196.jpg); background-size: 1250px 288px;">
        <div class="container">
          <h1 class="display-4" style="color: antiquewhite;" >Search Movie</h1>
          <p class="lead " style="color: antiquewhite;">that you will love to watch.</p>
        </div>
        <form action="/home" method="post">
        <div class="input-group">
            <div class="form-outline" style="margin-left: 100px;">
              <input name="movies" type="search" id="form1" class="form-control" />
              <!-- <label class="form-label" for="form1">Search</label> -->
            </div>
            
            <button type="submit" class="btn btn-primary" style="height: 38px; width: 100px;">
                <label class="form-label" for="form1">Search</label>

              <i class="fas fa-search"></i>
            </button>
        </div>
        </form>
          </div>

      <!-- </div> -->

      <% if(movies.Title!=null){ %>
       <table class="table">
        <thead>
            <tr>
              
              <th scope="col">Poster</th>
              <th scope="col">Movie Name</th>
              <th scope="col">Rating</th>
              <th scope="col">ADD</th>
              
            </tr>
        </thead> 
        <tbody>
            
          

        <tr>
          <tr>
            <th scope="row"><img src="<%= movies.Poster %>" class="rounded" style="height:250px; width:250px" /></td>
            <td><%= movies.Title %></td>
            <td><%= movies.imdbRating %></td>
            <td> 
                <form action="/home/addMovies" method="post">
                    <input type="hidden" name="title" value=<%= movies.Title %> ></input>
                    <input type="hidden" name="poster" value=<%= movies.Poster %> ></input>
                    <input type="hidden" name="imdbRating" value=<%= movies.imdbRating %> ></input>
                    <button class="btn btn-primary">Add to Playlist</button>
                </form>
            </td>
          </tr>
        </tr>
          
        </tbody>
    </table>
    <% } %>

    <h1>Playlist</h1>


    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Poster</th>
            <th scope="col">Movie Name</th>
            <th scope="col">Rating</th>
            
          </tr>
        </thead>
        <tbody>
          
          <tr>
            <% for(var i=playlist.length-1;i>=0;i--) { %>
                <tr>
                    <th scope="row"><%= playlist.length-i %></th>
                    <td><img src="<%= playlist[i].image %>" class="rounded" style="height:150px; width:150px" /></td>
                    <td><%= playlist[i].name %></td>
                    <td><%= playlist[i].rating %></td>
                    
                </tr>
                <% } %>
          </tr>
          
        </tbody>
      </table>







<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
    </body>
</html>